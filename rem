#!/usr/bin/env raku

unit sub MAIN(Str $regex, Bool :v(:$verbose) = False, Bool :d(:$dry-run) = False);

my $regex-object = rx/<$regex>/;

for dir(".") {
    my $basename = .basename;
    next unless $basename ~~ $regex-object;

    say "$basename" if $verbose || $dry-run;
    .unlink unless $dry-run;
}
